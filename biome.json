{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "files": {
    "ignoreUnknown": true,
    "ignore": [
      "node_modules/**",
      "**/*.json",
      "**/dist",
      "**/out",
      "**/build",
      "public/*.js"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "include": ["src/**/*", ".storybook/**/*"],
    "ignore": ["build/**/*"],
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
